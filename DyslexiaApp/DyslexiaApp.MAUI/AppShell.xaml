<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DyslexiaApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DyslexiaApp.MAUI"
    xmlns:pages="clr-namespace:DyslexiaApp.MAUI.Pages.Login"
    Shell.FlyoutBehavior="Disabled"
    Title="DyslexiaApp.MAUI">
    
    <ShellContent 
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    <ShellContent
         ContentTemplate="{DataTemplate pages:RegisterAgreement}"
         Route="RegisterAgreement" />

    <ShellContent
         Title="Register"
         ContentTemplate="{DataTemplate pages:Register}"
         Route="Register" />
    
    <ShellContent
         Title="Diagnosis Letter Matching Information"
         ContentTemplate="{DataTemplate pages:DiagnosisLetterMatchingInformation}"
         Route="DiagnosisLetterMatchingInformation" />
    <ShellContent
         Title="Diagnosis Educational Game Page"
         ContentTemplate="{DataTemplate pages:EducationalGameList}"
         Route="EducationalGameList" />

    <!--<TabBar>
        <ShellContent Title="Login"
                      ContentTemplate="{DataTemplate pages:LoginPage}"
                      Route="LoginPage"/>
    </TabBar>-->
</Shell>