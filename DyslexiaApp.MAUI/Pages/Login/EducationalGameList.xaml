<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DyslexiaApp.MAUI.Pages.Login.EducationalGameList"
             xmlns:vm="clr-namespace:DyslexiaApp.MAUI.ViewModels"
             x:DataType="vm:EducationalGamesViewModel"
             xmlns:dto="clr-namespace:DyslexiaAppMAUI.Shared.Dtos;assembly=DyslexiaAppMAUI.Shared"
             BackgroundImageSource="mainpage.jpg">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="CardMainStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="{OnPlatform iOS='50', Android='20', Default='50'}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="WidthRequest" Value="230" />
                <Setter Property="HeightRequest" Value="200" />
            </Style>
            <Style x:Key="CardContainerStyle" TargetType="StackLayout">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="Spacing" Value="{OnPlatform iOS='30', Android='10', Default='30'}" />
            </Style>

            <Style x:Key="HomeIconStyle" TargetType="ImageButton">
                <Setter Property="Margin" Value="5" />
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="HeightRequest" Value="100" />
                <Setter Property="CornerRadius" Value="55" />
                <Setter Property="VerticalOptions" Value="StartAndExpand" />
                <Setter Property="HorizontalOptions" Value="StartAndExpand" />
            </Style>

            <Style x:Key="StartIconStyle" TargetType="ImageButton">
                <Setter Property="Margin" Value="{OnPlatform iOS='10,-50,-10,10', Android='5,-65,-5,5', Default='10,-50,-10,10'}" />
                <Setter Property="WidthRequest" Value="{OnPlatform Android=100, Default=160}" />
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="CornerRadius" Value="60" />
                <Setter Property="VerticalOptions" Value="End" />
                <Setter Property="HorizontalOptions" Value="End" />
            </Style>

            <Style x:Key="StartIconTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Color x:Key="SemiTransparentBlack">#CCF5F6F6</Color>

        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid Style="{StaticResource HomeIconStyle}" VerticalOptions="Start" HorizontalOptions="Start">
            <ImageButton Source="home_button.png" 
                         Margin="0,10,-20,10"
                         BackgroundColor="Transparent"
                         VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Clicked="Home_Button"/>
        </Grid>

        <Grid VerticalOptions="Center" 
              HorizontalOptions="Center"
              WidthRequest="{OnPlatform iOS='1100', Android='700', Default='1100'}"
              HeightRequest="{OnPlatform iOS='500', Android='300', Default='500'}"
              Margin="30,0,0,0"
              Background="{StaticResource SemiTransparentBlack}">

            <CollectionView ItemsSource="{Binding FilteredEducational}"
                            WidthRequest="{OnPlatform iOS='700', Android='600', Default='700'}"
                            HeightRequest="{OnPlatform iOS='600', Android='500', Default='600'}"
                            Margin="{OnPlatform iOS='50,-100', Android='20,-50', Default='50,-100'}"
                            HorizontalOptions="Start"
                            VerticalOptions="Start">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" 
                                     VerticalItemSpacing="20"
                                     HorizontalItemSpacing="20"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:EducationalDto">
                        <VerticalStackLayout>
                            <Frame WidthRequest="{OnPlatform iOS='200', Android='150', Default='200'}"
                                   HeightRequest="{OnPlatform iOS='200', Android='150', Default='200'}"
                                   Margin="{OnPlatform iOS='20,130,10,10', Android='10,80,5,5', Default='20,130,10,10'}"
                                   Padding="0"
                                   CornerRadius="10"
                                   BorderColor="Black"
                                   BackgroundColor="#A2DBAE">

                                <Grid RowDefinitions="*, Auto,Auto">
                                    <Image Grid.Row="0"
                                           Source="listedpicture.jpeg"
                                           Aspect="Fill"/>
                                    <Label Grid.Row="0"
                                           Text="{Binding Name}"
                                           FontSize="Medium"
                                           TextColor="ForestGreen"
                                           FontAttributes="Bold"
                                           Margin="{OnPlatform iOS='60,90,0,0', Android='40,60,0,0', Default='60,90,0,0'}"
                                           BackgroundColor="Transparent" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EducationalGamesViewModel}}, Path= ShowGameDetailsCommand}" CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                            <Label Text="{Binding Source={RelativeSource AncestorType={x:Type vm:EducationalGamesViewModel}}, Path=TotalScore, StringFormat=' Best Score: {0}'}" 
                                   FontSize="{OnPlatform iOS='25', Android='15', Default='20'}"
                                   TextColor="ForestGreen"
                                   FontAttributes="Bold"
                                   WidthRequest="{OnPlatform iOS='150', Android='120', Default='150'}"
                                   HeightRequest="{OnPlatform iOS='50', Android='40', Default='50'}"
                                   Margin="{OnPlatform iOS='50,0,10,0', Android='30,0,5,0', Default='50,0,10,0'}"/>
                        </VerticalStackLayout>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <ContentView 
                     IsVisible="{Binding IsPopupVisible}" 
                     Padding="10"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     HeightRequest="{OnPlatform iOS='600', Android='450', Default='600'}" 
                     WidthRequest="{OnPlatform iOS='900', Android='500', Default='900'}">

            <Frame HeightRequest="{OnPlatform iOS='300', Android='200', Default='300'}" 
                   WidthRequest="{OnPlatform iOS='550', Android='350', Default='550'}">
                <VerticalStackLayout>
                    <ImageButton Source="close.png" 
                                  BackgroundColor="Transparent"
                                  WidthRequest="20"
                                  HeightRequest="30"
                                  Scale="1" 
                                  Padding="0"
                                  VerticalOptions="End" 
                                  HorizontalOptions="End"
                                  Command="{Binding ClosePopupCommand}"
                                  Margin="15,5"/>
                    <Label Text="{Binding SelectedGame.Name}"
                            Margin="0,-30"
                            FontAttributes="Bold"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            TextColor="#019BE1"/>

                    <Label  Text="{Binding SelectedGame.Description}"
                            Margin="{OnPlatform iOS='0,40', Android='0,50', Default='0,40'}"
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            TextColor="Black"/>

                    <Grid Style="{StaticResource StartIconStyle}" VerticalOptions="End" HorizontalOptions="End">
                        <ImageButton Source="cloud.png" 
                                     BackgroundColor="Transparent"
                                     VerticalOptions="Center" 
                                     HorizontalOptions="Center"/>
                        <Label Text="Start Test" 
                                Style="{StaticResource StartIconTextStyle}" 
                                VerticalOptions="Center" 
                                HorizontalOptions="Center"/>

                        <Button BackgroundColor="Transparent" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EducationalGamesViewModel}}, Path=GoToPictureMatchingGameCommand}" />


                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </ContentView>
        <ActivityIndicator IsRunning="{Binding IsBusy}" />
    </Grid>
</ContentPage>