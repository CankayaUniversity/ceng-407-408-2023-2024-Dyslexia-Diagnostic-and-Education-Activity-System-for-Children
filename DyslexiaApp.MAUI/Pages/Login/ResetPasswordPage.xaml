<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DyslexiaApp.MAUI.Pages.Login.ResetPasswordPage"
             xmlns:vm="clr-namespace:DyslexiaApp.MAUI.ViewModels"
             x:DataType="vm:ResetPasswordViewModel"
             BackgroundImageSource="login.jpg">
    <StackLayout Padding="10">
        <Label Text="Reset Password" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,20"/>
        <Entry Placeholder="New Password" Text="{Binding NewPassword}" IsPassword="True" Margin="0,10"/>
        <Button Text="Reset Password" Command="{Binding ResetPasswordCommand}" Margin="0,20"/>
        <Label Text="{Binding Message}" TextColor="Red" Margin="0,20"/>
    </StackLayout>
</ContentPage>
