<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DyslexiaApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DyslexiaApp.MAUI"
    xmlns:pages="clr-namespace:DyslexiaApp.MAUI.Pages.Login"
    Shell.FlyoutBehavior="Disabled"
    Title="DyslexiaApp.MAUI">

    <ShellContent 
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    <ShellContent
         ContentTemplate="{DataTemplate pages:RegisterAgreement}"
         Route="RegisterAgreement" />

    <ShellContent
         ContentTemplate="{DataTemplate pages:Register}"
         Route="Register" />

    <ShellContent
         ContentTemplate="{DataTemplate pages:DiagnosisLetterMatchingInformation}"
         Route="DiagnosisLetterMatchingInformation" />
    <ShellContent
         ContentTemplate="{DataTemplate pages:EducationalGameList}"
         Route="EducationalGameList" />
    <ShellContent
          ContentTemplate="{DataTemplate pages:PictureMatchingGame}"
          Route="PictureMatchingGame" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:ProfilePage}"
           Route="ProfilePage" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:DiagnosticTestAgreement}"
           Route="DiagnosticTestAgreement" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:DiagnosisNavigationInfo}"
           Route="DiagnosisNavigationInfo" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:LetterMatchingGame}"
           Route="LetterMatchingGame" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:PlayGame}"
           Route="PlayGame" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:NavigationSkillsGame}"
           Route="NavigationSkillsGame" />
    <ShellContent
       ContentTemplate="{DataTemplate pages:ForgotPassword}"
       Route="ForgotPassword" />
    <ShellContent
           ContentTemplate="{DataTemplate pages:ResetPasswordPage}"
           Route="ResetPasswordPage" />
    <ShellContent
       ContentTemplate="{DataTemplate pages:DiagnosisSymmetryInfo}"
       Route="DiagnosisSymmetryInfo" />
    <ShellContent
   ContentTemplate="{DataTemplate pages:SymmetryGameTest}"
   Route="SymmetryGameTest" />
    <ShellContent
   ContentTemplate="{DataTemplate pages:DiagnosisResultPage}"
   Route="DiagnosisResultPage" />
    <ShellContent 
    ContentTemplate="{DataTemplate pages:EducationalResultPage}"
    Route="EducationalResultPage" />

    <MenuItem IconImageSource="power"
              Clicked="SignoutMenuItem_Clicked"/>

</Shell>



